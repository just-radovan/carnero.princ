<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape
			android:shape="rectangle"
			android:dither="true">

			<solid android:color="@color/card_separator"/>
		</shape>
	</item>

	<item android:bottom="1dp">
		<shape
			android:shape="rectangle"
			android:dither="true">

			<solid android:color="@android:color/white"/>
			<padding
				android:top="8dp"
				android:right="0dp"
				android:bottom="8dp"
				android:left="0dp"/>
		</shape>
	</item>
</layer-list>